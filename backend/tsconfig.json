{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "shared/**/*.ts",
    "agents/**/*.ts",
    "api/**/*.ts",
    "mcp-servers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "overlay"]
}
